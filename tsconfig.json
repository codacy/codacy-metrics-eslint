{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "CommonJS",
    "noErrorTruncation": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2022"
  },
  "include": [
    "src/**/*.ts",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
