{
  "name": "codacy-metrics-eslint",
  "description": "Eslint Metrics Tool for Codacy",
  "keywords": [
    "codacy",
    "eslint",
    "javascript",
    "complexity",
    "typescript"
  ],
  "homepage": "https://github.com/codacy/codacy-eslint#readme",
  "bugs": {
    "url": "https://github.com/codacy/codacy-eslint/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codacy/codacy-eslint.git"
  },
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "directories": {
    "test": "./src/test",
    "src": "./src"
  },
  "scripts": {
    "compile": "tsc",
    "dockerBuild": "docker build -t codacy-metrics-eslint .",
    "test": "mocha"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write",
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "src/*.{ts,js,css,json,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "require": "ts-node/register",
    "spec": "src/test/**/*.spec.ts"
  },
  "dependencies": {
    "@nodelib/fs.walk": "^1.2.4",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "json-schema": "^0.2.5",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/eslint": "^6.8.1",
    "@types/lodash": "^4.14.155",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.11",
    "@types/node-fetch": "^2.5.7",
    "@types/simple-mock": "^0.8.1",
    "chai": "^4.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.8",
    "mocha": "^7.2.0",
    "prettier": "^2.0.5",
    "simple-mock": "^0.8.0",
    "sort-package-json": "^1.44.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2"
  }
}
