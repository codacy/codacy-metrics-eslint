{
  "name": "codacy-metrics-eslint",
  "description": "Eslint Metrics Tool for Codacy",
  "keywords": [
    "codacy",
    "eslint",
    "javascript",
    "complexity",
    "typescript"
  ],
  "homepage": "https://github.com/codacy/codacy-eslint#readme",
  "bugs": {
    "url": "https://github.com/codacy/codacy-eslint/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codacy/codacy-eslint.git"
  },
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "directories": {
    "test": "./src/test",
    "src": "./src"
  },
  "scripts": {
    "compile": "tsc",
    "dockerBuild": "docker build -t codacy-metrics-eslint .",
    "test": "mocha"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write",
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "src/*.{ts,js,css,json,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "require": "ts-node/register",
    "spec": "src/test/**/*.spec.ts"
  },
  "dependencies": {
    "@nodelib/fs.walk": "^1.2.8",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.31.0",
    "json-schema": "^0.3.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/eslint": "^7.28.0",
    "@types/lodash": "^4.14.171",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.6",
    "@types/node-fetch": "^2.5.12",
    "@types/simple-mock": "^0.8.2",
    "chai": "^4.3.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.2",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "mocha": "^9.0.3",
    "prettier": "^2.3.2",
    "simple-mock": "^0.8.0",
    "sort-package-json": "^1.50.0",
    "ts-loader": "^8.0.10",
    "ts-node": "^10.1.0"
  }
}
